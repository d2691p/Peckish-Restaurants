<% include ../partials/header %>
<link href="/stylesheets/main.css" rel="stylesheet">
<div class="container">    
    <header class="jumbotron"> 
        <div class="container">
            <h1>Welcome to Peckish</h1>
            <p>Check out our latest restaurant reviews!</p>
            <p>
                <a class="btn btn-peckish btn-lg" href="/restaurants/new">Add a new Restaurant</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% restaurants.forEach(function(restaurant){ %>
           <div class="restaurant-index col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=restaurant.image%>">
                    <div class="caption">
                        <h4><%= restaurant.name%></h4>
                    </div>
                    <p>
                        <a href="/restaurants/<%=restaurant._id%>" class="btn btn-peckish">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
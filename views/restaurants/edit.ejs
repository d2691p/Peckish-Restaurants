<% include ../partials/header %>
<link href="/stylesheets/main.css" rel="stylesheet">
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= restaurant.name %></h1>
        <div class="comment-box">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[image]" value="<%= restaurant.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Location" name="restaurant[location]" value="<%= restaurant.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Cuisine" name="restaurant[cuisine]" value="<%= restaurant.cuisine %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

